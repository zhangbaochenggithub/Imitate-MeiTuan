/**index.wxss**/
@import "../../style/weui.wxss";

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.search{
  width:95%;
  height:56rpx;
  /* border:1px solid red; */
}
.search_title{
font-size: 28rpx;
color:#505052;
margin:0 20rpx -20rpx 10px;
line-height: 56rpx;
}
.search_box{
  width:84%;
  height:56rpx;
  border-radius: 100rpx;
  background:rgb(243, 243, 243);
  display:inline-block;
  padding-left:20rpx;
}

.search_context{
  width:400rpx;
  font-size:28rpx;
  display:inline-block;
  margin:6rpx 0 0 20rpx;
}
.search_line{
  width:100%;
  height:2rpx;
  background:rgb(240, 240, 240);
  margin-top:10rpx;
}
.search_searchIcon{
}
.banner_box{
 width: 95%;
 box-sizing: border-box;
 margin-top:20rpx;
 
}
.banner_01, .banner_02, .banner_03{
  display: block;
  height: 300rpx;
  
}
.banner_01{
  position: relative;
  align-items: center;
  justify-content: center;
  background-color: pink;
}
.banner_02{
  position: relative;
  align-items: center;
  justify-content: center;
  background-color: orange;
}
.banner_03{
  position: relative;
  align-items: center;
  justify-content: center;
  background-color: skyblue;
}
.entrance_box{
 width: 95%;
 display: flex;
 flex-direction:row;
 margin-left:24rpx;
 
}
.entrance_sub_title{
  margin:10rpx 0 0 -30rpx;
  font-size:12px;
  color:#505052;
  text-align: center;

}
.entrance_01, .entrance_02, .entrance_03, .entrance_04, .entrance_05, .entrance_06, .entrance_07, .entrance_08, .entrance_09, .entrance_10{
  /* display: inline-block; */
  margin:20rpx 44rpx 0 16rpx;
  width: 88rpx;
  height: 88rpx;
  border-radius: 100rpx;
  
}
.entrance_01{
  background-color: rgb(252, 174, 232);
}
.entrance_02{
  background-color: orange;
}
.entrance_03{
  background-color: skyblue;
}
.entrance_04{
  background-color: rgb(195, 238, 205);
}
.entrance_05{
  background-color: rgb(248, 211, 216);
}
.entrance_06{
  background-color: rgb(248, 164, 164);
}
.entrance_07{
  background-color: rgb(135, 211, 128);
}
.entrance_08{
  background-color: rgb(250, 222, 170);
}
.entrance_09{
  background-color: rgb(249, 183, 255);
}
.entrance_10{
  background-color: rgb(196, 220, 252);
}
.banner_image_box{
  width:95%;
  height:240rpx;
  border-radius: 16rpx;
  background:rgb(248, 232, 232);
  margin-top:40rpx; 
}
.banner_image{
  width:100%;
  height:100%;
  
}
.groupon_box{
  width:95%;
}
.groupon_context{
  width:100%;
  display: flex;
  white-space: nowrap;
  border:2rpx solid red;

}
.groupon_context_01, .groupon_context_02, .groupon_context_03, .groupon_context_04, .groupon_context_05, .groupon_context_06, .groupon_context_07 {
  
  width:280rpx;
